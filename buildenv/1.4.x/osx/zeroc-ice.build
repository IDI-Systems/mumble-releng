urls=(
	"http://releng-distfiles.mumble.info/releng-distfiles/Ice-3.4.2.tar.gz"
	"http://www.zeroc.com/download/Ice/3.4/Ice-3.4.2.tar.gz"
)

digests=(
	"sha1:8c84d6e3b227f583d05e08251e07047e6c3a6b42"
	"sha256:dcf0484495b6df0849ec90a00e8204fe5fe1c0d3882bb438bf2c1d062f15c979"
)

function extract {
	tar -zxf Ice-3.4.2.tar.gz
	cd Ice-3.4.2
}

function prepare {
	patch -p1 <<EOF
--- ./cpp/src/Freeze/MapI.cpp   
+++ ./cpp/src/Freeze/MapI.cpp                                      
@@ -1487,10 +1487,10 @@ Freeze::MapHelperI::size() const

     try
     {
-#if DB_VERSION_MAJOR != 4
-#error Freeze requires DB 4.x
+#if DB_VERSION_MAJOR < 4
+#error Freeze requires DB 4.x or greater
 #endif
-#if DB_VERSION_MINOR < 3
+#if DB_VERSION_MAJOR == 4 && DB_VERSION_MINOR < 3
         _db->stat(&s, 0);
 #else
         _db->stat(_connection->dbTxn(), &s, 0);
EOF
	patch -p0 < ${MUMBLE_BUILDENV_ROOT}/patches/ice_for_clang_c++11_libc++_2012-09-14.patch.txt
	patch -p1 < ${MUMBLE_BUILDENV_ROOT}/patches/Ice-3.4.2-Darwin-static.patch
	patch -p1 < ${MUMBLE_BUILDENV_ROOT}/patches/ice-3.4.2-fix-libc++-build.patch
}

function build {
	cd cpp

	# fixme(mkrautz): Our Ice-3.4.2-Darwin-static patch has a bug
	# that causes the build to fail on first go. Work around it here.
	set +e
	make prefix=${ICE_PREFIX} STATICLIBS=yes OPTIMIZE=yes CXX="${CXX} ${OSX_CXXFLAGS}" CC="${CC} ${OSX_CFLAGS}" DB_HOME=${MUMBLE_PREFIX} MCPP_HOME=${MUMBLE_PREFIX} OPENSSL_HOME=${MUMBLE_PREFIX} EXPAT_HOME=${MUMBLE_PREFIX}
	make prefix=${ICE_PREFIX} STATICLIBS=yes OPTIMIZE=yes CXX="${CXX} ${OSX_CXXFLAGS}" CC="${CC} ${OSX_CFLAGS}" DB_HOME=${MUMBLE_PREFIX} MCPP_HOME=${MUMBLE_PREFIX} OPENSSL_HOME=${MUMBLE_PREFIX} EXPAT_HOME=${MUMBLE_PREFIX} depend
	set -e

	make prefix=${ICE_PREFIX} STATICLIBS=yes OPTIMIZE=yes CXX="${CXX} ${OSX_CXXFLAGS}" CC="${CC} ${OSX_CFLAGS}" DB_HOME=${MUMBLE_PREFIX} MCPP_HOME=${MUMBLE_PREFIX} OPENSSL_HOME=${MUMBLE_PREFIX} EXPAT_HOME=${MUMBLE_PREFIX}
}

function install {
	make prefix=${ICE_PREFIX} STATICLIBS=yes OPTIMIZE=yes CXX="${CXX} ${OSX_CXXFLAGS}" CC="${CC} ${OSX_CFLAGS}" DB_HOME=${MUMBLE_PREFIX} MCPP_HOME=${MUMBLE_PREFIX} OPENSSL_HOME=${MUMBLE_PREFIX} EXPAT_HOME=${MUMBLE_PREFIX} install
}
